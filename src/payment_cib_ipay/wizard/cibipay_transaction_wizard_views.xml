<odoo>

    <record id="payment_link_wizard_view_form" model="ir.ui.view">
        <field name="name">payment.cibipay.refund.wizard.form</field>
        <field name="model">payment_cibipay.refund_wizard</field>
        <field name="arch" type="xml">
            <form string="Refund ">
                <group>
                    <group>
                        <field name="order_id" readonly="1" />
                        <field name="order_amount" readonly="1" />
                    </group>
                    <group>
                        <field name="amount"/>
                    </group>
                </group>
                <footer>
                    <button string="Refund" class="btn-primary" type="object" name="action_do_refund" />
                    <button string="Cancel" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
   
</odoo>