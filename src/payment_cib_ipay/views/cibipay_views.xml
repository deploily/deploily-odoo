<odoo>
    <record id="payment_acquirer_view_form_inherit_payment_cibipay" model="ir.ui.view">
        <field name="name">payment.acquirer.view.form.inherit.payment.cibipay</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'cibipay')]}">
                    <field name="cibipay_username" attrs="{'required':[ ('provider', '=', 'cibipay'), ('state', '!=', 'disabled')]}"/>
                    <field name="cibipay_password" attrs="{'required':[ ('provider', '=', 'cibipay'), ('state', '!=', 'disabled')]}"/>
                    <field name="cibipay_terminal_id" attrs="{'required':[ ('provider', '=', 'cibipay'), ('state', '!=', 'disabled')]}"/>
                    <field name="cibipay_udf1"/>
                    <field name="cibipay_udf2"/>
                    <field name="cibipay_udf3"/>
                    <field name="cibipay_udf4"/>
                    <field name="cibipay_udf5"/>
                    <field name="cibipay_captcha_sitekey"/>
                    <field name="cibipay_captcha_secret"/>
                    <field name="cibipay_language" widget="radio"/>
                    <field name="cibipay_currency" widget="radio"/>
                    <field name="cibipay_terms_page" default="terms"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>