<odoo>
    <record id="payment_acquirer_edahabia" model="payment.acquirer">
        <field name="name">EDAHABIA Gateway</field>
        <field name="description" type="html">
            <p>
                A payment gateway from TransformaTek to accept online payments via Algerian EDAHABIA cards
            </p>
            <ul class="list-inline">
                <li class="list-inline-item">
                    <i class="fa fa-check"></i>
                    Online Payment
                </li>
                <li class="list-inline-item">
                    <i class="fa fa-check"></i>
                    Payment Status Tracking
                </li>
            </ul>
        </field>
        <field name="provider">edahabia</field>
        <field name="company_id" ref="base.main_company" />
        <field name="view_template_id" ref="edahabia_form" />
        <field name="image_128" type="base64" file="payment_edahabia/static/description/icon.png" />
    </record>

    <record model="payment.icon" id="payment_icon_edahabia">
        <field name="name">TransformaTek EDAHABIA Gateway</field>
        <field name="acquirer_ids" eval="[(4,ref('payment_acquirer_edahabia'))]" />
        <field name="image" type="base64" file="payment_edahabia/static/src/image/logo_edahabia_ap.png" />
    </record>

</odoo>