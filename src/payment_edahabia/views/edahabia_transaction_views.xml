<odoo>
    <record id="edahabia_transaction_form" model="ir.ui.view">
        <field name="name">payment.edahabia.transaction.form</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.transaction_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button t-if="acquirer_id.provider == 'edahabia'" type="object" name="action_refund" states="done" string="Refund" class="oe_highlight" />
            </xpath>
            <xpath expr="//sheet/group[1]" position="after">
                <t t-if="acquirer_id.provider == 'edahabia'">
                    <t t-esc="state" />
                    <group>
                        <group>
                            <field name="edahabia_mdorder" readonly="1" />
                            <field name="edahabia_approval_code" readonly="1" />
                            <field name="edahabia_order_status_description" readonly="1" />
                            <field name="edahabia_auth_code" readonly="1" />
                            <field name="edahabia_expiration" readonly="1" />
                            <field name="edahabia_cardholder_name" readonly="1" />
                        </group>
                        <group>
                            <field name="edahabia_deposit_amount" readonly="1" />
                            <field name="edahabia_order_status" readonly="1" />
                            <field name="edahabia_error_code" readonly="1" />
                            <field name="edahabia_error_message" readonly="1" />
                            <field name="edahabia_pan" readonly="1" />
                            <field name="edahabia_ip" readonly="1" />
                        </group>
                    </group>
                </t>
            </xpath>
        </field>
    </record>
</odoo>