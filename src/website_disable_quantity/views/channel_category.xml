<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="channel_category_tree_view" model="ir.ui.view">
            <field name="name">channel.category.tree</field>
            <field name="model">channel.category</field>
            <field name="arch" type="xml">
                <list string="Category" >
                    <!-- <field name="sequence" widget="handle"/> -->

                    <field name="name"/>
                    <field name="description"/>
                    <field name="image" widget="image" options="{'size': [50, 50]}"/>
                </list>
            </field>
        </record>
        <record id="channel_category_form_view" model="ir.ui.view">
            <field name="name">channel.category.form</field>
            <field name="model">channel.category</field>
            <field name="arch" type="xml">
                <form string="Category">
                    <sheet>
                        <group>
                            <!-- Left column -->
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                            <!-- Right column -->
                            <group>
                                <field name="image" widget="image" options="{'size': [100, 100]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action: only tree view -->
        <record id="channel_category_action" model="ir.actions.act_window">
            <field name="name">Channel Category</field>
            <field name="res_model">channel.category</field>
            <field name="view_mode">list,form</field> <!-- Only tree -->
            <field name="views" eval="[(ref('channel_category_tree_view'), 'tree')]"/>
        </record>

        <menuitem name="Categories"
        id="website_slides_menu_channel_category"
        parent="website_slides.website_slides_menu_config_settings"
        sequence="1"
        action="channel_category_action"
        groups="base.group_system"/>


        <record id="view_slide_channel_form_inherit_category" model="ir.ui.view">
            <field name="name">slide.channel.form.inherit.category</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">

                <!-- Insert category_id after tag_ids -->
                <xpath expr="//field[@name='tag_ids']" position="after">
                   <div class="mt-3">
                    <field name="category_id"  placeholder="Category"/>
                </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
